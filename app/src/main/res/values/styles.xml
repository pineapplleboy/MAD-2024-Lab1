<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HintTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/manrope</item>
    </style>

    <style name="InputTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/dark_button</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InputTextView.Profile">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:letterSpacing">0.0071</item>
    </style>

    <style name="InputTextView.Welcome">
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_faded</item>
    </style>

    <style name="MovieProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:progress">0</item>
        <item name="android:max">100</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:progressDrawable">@drawable/progress_gradient</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextColor">@color/gray_faded</item>
        <item name="itemIconTint">@color/gray_faded</item>
        <item name="itemIconSize">28dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:padding">8dp</item>
        <item name="itemMinHeight">48dp</item>
    </style>

    <style name="BottomNavigationTextStyle">
        <item name="fontFamily">@font/manrope</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>